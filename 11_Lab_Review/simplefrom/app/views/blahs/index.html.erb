<h1>Listing blahs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @blahs.each do |blah| %>
      <tr>
        <td><%= blah.title %></td>
        <td><%= link_to 'Show', blah %></td>
        <td><%= link_to 'Edit', edit_blah_path(blah) %></td>
        <td><%= link_to 'Destroy', blah, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

